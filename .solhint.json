{
    "extends": "solhint:recommended",
    "plugins": ["prettier"],
    "rules": {
        "compiler-version": "off",
        "prettier/prettier": "warning",
        "reason-string": ["off"],
        "no-inline-assembly": "off",
        "not-rely-on-time": "off",
        "no-global-import": "off",
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ]
    }
}
