{
  "name": "@fluencelabs/deal-aurora",
  "version": "0.2.22",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run generate-contract-types && npm run update-deployments && shx rm -rf dist && tsc -b",
    "build:ts": "shx rm -rf dist && tsc -b",
    "generate-contract-types": "shx rm -rf ./src/typechain-types && typechain --target ethers-v6 '../out/**/*.json' --out-dir ./src/typechain-types --node16-modules && npm run replace-imports",
    "replace-imports": "node replace-imports.js",
    "update-deployments": "rm -rf deployments && cp -r ../deployments ./src/deployments",
    "lint": "eslint 'client/**/*.ts' --max-warnings 0 --fix",
    "fmt": "prettier 'client/**/*.ts' --w"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ethers": "6.7.1"
  },
  "devDependencies": {
    "@tsconfig/node18-strictest-esm": "^1.0.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@types/node": "^20.5.4",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-license-header": "^0.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:@typescript-eslint/strict-type-checked",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "prettier"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  }
}
