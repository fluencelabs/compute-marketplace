{
  "extends": ["@tsconfig/node18", "@tsconfig/strictest"],
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "lib": ["es2023"]
  },
  "include": ["src"],
}